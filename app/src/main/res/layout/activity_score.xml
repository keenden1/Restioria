<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    style="@style/SCREEN_EASY"
    tools:context=".score">

  <TextView
      android:id="@+id/textView26"
      android:layout_width="405dp"
      android:layout_height="match_parent"
      android:background="@color/dirty"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent" />

  <ImageView
      android:id="@+id/imageView14"
      android:layout_width="207dp"
      android:layout_height="118dp"
      android:layout_marginBottom="164dp"
      app:layout_constraintBottom_toBottomOf="@+id/imageView13"
      app:layout_constraintEnd_toEndOf="@+id/imageView13"
      app:layout_constraintHorizontal_bias="0.472"
      app:layout_constraintStart_toStartOf="@+id/imageView13"
      app:srcCompat="@drawable/star_rating" />

  <ImageView
      android:id="@+id/imageView13"
      android:layout_width="243dp"
      android:layout_height="209dp"
      android:layout_marginTop="76dp"
      app:layout_constraintEnd_toEndOf="@+id/textView26"
      app:layout_constraintStart_toStartOf="@+id/textView26"
      app:layout_constraintTop_toTopOf="@+id/textView26"
      app:srcCompat="@drawable/trophy" />

  <TextView
      android:id="@+id/scores"
      android:layout_width="127dp"
      android:layout_height="51dp"
      android:background="@color/transparent"
      android:fontFamily="@font/my_cool_layout"
      android:gravity="center"
      android:shadowColor="#000000"
      android:shadowDx="11"
      android:shadowDy="4"
      android:shadowRadius="5"
      android:textColor="@color/white"
      android:textSize="45dp"
      app:layout_constraintBottom_toBottomOf="@+id/imageView13"
      app:layout_constraintEnd_toEndOf="@+id/imageView13"
      app:layout_constraintHorizontal_bias="0.508"
      app:layout_constraintStart_toStartOf="@+id/imageView13"
      app:layout_constraintTop_toTopOf="@+id/imageView13"
      app:layout_constraintVertical_bias="0.284" />

  <TextView
      android:id="@+id/done_button"
      android:layout_width="125dp"
      android:layout_height="47dp"
      android:layout_marginTop="8dp"
      android:background="@drawable/border2"
      android:gravity="center"
      android:text="DONE"
      android:textColor="@color/white"
      android:textSize="20dp"
      app:layout_constraintEnd_toEndOf="@+id/textView26"
      app:layout_constraintStart_toStartOf="@+id/textView26"
      app:layout_constraintTop_toBottomOf="@+id/imageView13" />

  <TextView
      android:id="@+id/textView27"
      android:layout_width="95dp"
      android:layout_height="28dp"
      android:fontFamily="@font/my_cool_layout"
      android:gravity="center"
      android:shadowColor="#000000"
      android:shadowDx="11"
      android:shadowDy="4"
      android:shadowRadius="5"
      android:text="TOTAL SCORE"
      android:textColor="@color/white"
      android:textSize="20dp"
      app:layout_constraintBottom_toBottomOf="@+id/imageView14"
      app:layout_constraintEnd_toEndOf="@+id/scores"
      app:layout_constraintHorizontal_bias="0.437"
      app:layout_constraintStart_toStartOf="@+id/scores" />

</androidx.constraintlayout.widget.ConstraintLayout>
