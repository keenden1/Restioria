<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    style="@style/SCREEN"
    tools:context=".easymode">

    <TextView
        android:id="@+id/textView24"
        android:layout_width="505dp"
        android:layout_height="256dp"
        android:background="@color/dirty"
        app:layout_constraintBottom_toBottomOf="@+id/play"
        app:layout_constraintEnd_toEndOf="@+id/next_quiz_easy"
        app:layout_constraintHorizontal_bias="0.521"
        app:layout_constraintStart_toStartOf="@+id/play"
        app:layout_constraintTop_toTopOf="@+id/play"
        app:layout_constraintVertical_bias="0.243" />

    <ImageView
        android:id="@+id/back_to_easy"
        android:layout_width="76dp"
        android:layout_height="53dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.09"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.125"
        app:srcCompat="@drawable/back" />

    <ImageView
        android:id="@+id/play"
        android:layout_width="163dp"
        android:layout_height="96dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.285"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.498"
        app:srcCompat="@drawable/play_video"/>

    <ImageView
        android:id="@+id/next_quiz_easy"
        android:layout_width="163dp"
        android:layout_height="96dp"
        app:srcCompat="@drawable/play_now"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.765"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.498" />

    <ImageView
        android:id="@+id/imageView12"
        android:layout_width="95dp"
        android:layout_height="60dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.924"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.108"
        app:srcCompat="@drawable/qa" />

    <TextView
        android:id="@+id/textView20"
        android:layout_width="161dp"
        android:layout_height="52dp"
        android:layout_marginStart="164dp"
        android:layout_marginTop="24dp"
        android:fontFamily="@font/my_cool_layout"
        android:gravity="center"
        android:shadowColor="#000000"
        android:shadowDx="11"
        android:shadowDy="4"
        android:shadowRadius="5"
        android:text="REPLAY"
        android:textColor="#FFEB3B"
        android:textSize="55sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/play" />

    <TextView
        android:id="@+id/textView21"
        android:layout_width="161dp"
        android:layout_height="52dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="132dp"
        android:fontFamily="@font/my_cool_layout"
        android:gravity="center"
        android:shadowColor="#000000"
        android:shadowDx="11"
        android:shadowDy="4"
        android:shadowRadius="5"
        android:text="PLAY"
        android:textColor="#FFEB3B"
        android:textSize="55sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/next_quiz_easy" />
</androidx.constraintlayout.widget.ConstraintLayout>