<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <layer-list xmlns:android="http://schemas.android.com/apk/res/android">
        <!-- Background with border -->
        <item>
            <shape android:shape="rectangle">
                <solid android:color="#000000"/>
                <stroke
                    android:width="2dp"
                    android:color="#000000"/>  <!-- Border color -->
                <corners android:radius="4dp"/> <!-- Border radius, adjust as needed -->
            </shape>
        </item>
        <!-- Progress bar (change the color to suit your design) -->
        <item android:id="@android:id/progress">
            <clip>
                <shape android:shape="rectangle">
                    <solid android:color="#FF5722"/> <!-- Progress color -->
                    <corners android:radius="4dp"/> <!-- Border radius, match with the background if needed -->
                </shape>
            </clip>
        </item>
    </layer-list>
</selector>